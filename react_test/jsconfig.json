{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "jsx": "react-jsx",
    "checkJs": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
